@-moz-document domain("mail.google.com") {

	/* Condense labels in conversation list */
	.ar {
		max-width:8px;
		transition: all 0.2s ease 0.3s !important;
	}
	.ar .av {
		opacity:0;
		transition: all 0.2s ease 0.1s !important;
	}

	/* Show full size labels on hover */
	.ar:hover {
		max-width:250px;
		transition: all 0.2s ease 0.3s !important;
	}
	.ar:hover .av {
		opacity:1;
		transition: all 0.2s ease 0.3s !important;
	}

}
